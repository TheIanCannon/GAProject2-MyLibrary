<%- include('../partials/header') %>

    <h2>Edit Book</h2>

    <form id="edit-book-form" action="/books/<%= book._id %>?_method=PUT" method="POST">
        <label>Title</label>
        <input type="text" name="title" required=true value="<%= book.title %>"><br>&nbsp;<br>
        <label>Author(s)</label>
        <input type="text" name="author" required=true value="<%= book.author %>"><br>&nbsp;<br>
        <label>Genre</label>
        <select name="genre" default="<%= book._id.genre %>">
    <option value=""></option>
    <option value="Fantasy">Fantasy</option>
    <option value="General Fiction">General Fiction</option>
<option value="General Non-Fiction">General Non-Fiction</option>
    <option value="Horror">Horror</option>
    <option value="Humor">Humor</option>
<option value="Literature">Literature</option>				
<option value="Manual">Manual</option>
<option value="Mystery">Mystery</option>
				<option value="Reference">Reference</option>
				<option value="Religion">Religion</option>
    <option value="Speculative Fiction">Speculative Fiction</option>
						  </select><br>&nbsp;<br>
        <label id="edit-pubdate" for="pubDate">Publishing Date<br>
            <input  type="date" name="pubDate">
        </label><br>&nbsp;<br>
        <button id="edit-book" type="submit">Update Book</button>
    </form>

    <%- include('../partials/footer') %>